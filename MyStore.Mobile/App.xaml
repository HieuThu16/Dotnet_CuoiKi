<?xml version = "1.0" encoding = "utf-8" ?>
<Application
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyStore.Mobile.Converters"
    x:Class="MyStore.Mobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <local:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <local:StringNullOrEmptyConverter x:Key="StringNullOrEmptyConverter"/>
            <local:BoolToDoubleConverter x:Key="BoolToDoubleConverter"/>
            <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
            <Color x:Key="PrimaryColor">#512BD4</Color>
            <Color x:Key="SecondaryColor">#3700B3</Color>
            <Color x:Key="TertiaryColor">#03DAC6</Color>
            <Color x:Key="DangerColor">#CF6679</Color>
            <Color x:Key="TextColor">#1C1B1F</Color>
            <Color x:Key="TextSecondaryColor">#49454E</Color>
            <Color x:Key="BorderColor">#E0E0E0</Color>

            <Style TargetType="Label" x:Key="Headline1">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
            </Style>

            <Style TargetType="Label" x:Key="Headline2">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
            </Style>

            <Style TargetType="Label" x:Key="Body">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextColor" Value="{StaticResource TextColor}"/>
            </Style>

            <Style TargetType="Button" x:Key="PrimaryButton">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
            </Style>

            <Style TargetType="Button" x:Key="SecondaryButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="TextColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="BorderColor" Value="{StaticResource PrimaryColor}"/>
                <Setter Property="CornerRadius" Value="8"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
