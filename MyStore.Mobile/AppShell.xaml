<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyStore.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyStore.Mobile.Views">

    <TabBar>
        <!-- Products Tab -->
        <ShellContent
            Title="Products"
            Icon="shopping.png"
            ContentTemplate="{DataTemplate local:ProductsPage}"
            Route="products" />

        <!-- Cart Tab -->
        <ShellContent
            Title="Cart"
            Icon="cart.png"
            ContentTemplate="{DataTemplate local:CartPage}"
            Route="cart" />

        <!-- Settings Tab -->
        <ShellContent
            Title="Settings"
            Icon="settings.png"
            Route="settings" />
    </TabBar>

    <!-- Route Declarations -->
    <ShellContent Route="productDetail" ContentTemplate="{DataTemplate local:ProductDetailPage}" />
    <ShellContent Route="checkout" ContentTemplate="{DataTemplate local:CheckoutPage}" />

</Shell>
